  class FucList<LoginPage
    include Fuc_List

    #判断应用所在的行是否存在
    def app_tr?(appname)
      flag=true
      app = app_tr(appname)
      if app.nil?
        flag=false
      end
      return flag
    end

    #根据应用名找到应用对应用的行
    def app_tr(appname)
      apptr   = ""
      trs_hash= apptable_element.hashes
      trs_hash.each do |tr|
        apptr = tr
        tr.each { |k, v|
          return apptr if v==appname
        }
      end
      return apptr
    end

    #获取应用编号
    def app_id(appname)
      id_head = "应用编号"
      rs      = app_tr(appname)
      if rs.empty?
        id = ""
      else
        id = rs[id_head]
      end
    end

    # a class="setting" href="/index.php/Apps/setting/id/160818626580"
    #retrun link element
    def app_config(appname)
      id        = app_id(appname)
      @link_add ="/index.php/Apps/setting/id/#{id}"
      browser.iframe(name: @@ts_tag_mainiframe).link(href: @link_add)
    end

    #根据应用名返回应用对应的行对象
    def get_app_tr(appname)
      trobj= ""
      apptable_element.each do |tr|
        trobj=tr
        tr.each do |cell|
          cell.text
          if cell.text=~/#{appname}/
            return trobj
          else
            trobj=false
          end
        end
      end
    end

