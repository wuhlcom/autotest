		class WanPage < MainPage
				include Wan_Page

				#打开WAN设置页面
				def open_wan_page(url)
						# self.navigate_to url
						self.refresh
						sleep 2
						5.times do
								if advance? && !(sys_version.slice(/系统版本:(.+)/, 1).nil?)
										self.wan_span_obj.click #点击WAN连接
										sleep 5
										break if wire?
								end
								self.clear_cookies
								self.refresh
								sleep 2
								login_with(@@ts_default_usr, @@ts_default_pw, url)
						end
				end

				#关闭WAN设置界面
				def close_wan_page
						self.close_wan if self.close_wan?
				end
        
        #保存
        def wan_save(time=60)
            puts "sleeping #{time} seconds for net reseting..."
            self.save
            sleep time
            unless self.wan?
                refresh
                sleep 1
                refresh
                sleep 1
            end
        end

				#pppoe连接输入
				def pppoe_input(user, pwd)
						self.pppoe_user_element.click
