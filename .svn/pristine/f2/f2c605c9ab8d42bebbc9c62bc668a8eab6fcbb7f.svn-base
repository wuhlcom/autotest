				end

				def input_static_ip(ip)
						self.static_ip_element.click #增加元素点击操作以防输入失败
						self.static_ip = ip
						ip_empty       =true
						if self.static_ip.nil? || self.static_ip.empty?
								puts "input static_ip #{ip} again"
								3.times.each do
										self.static_ip_element.click #增加元素点击操作以防输入失败
										self.static_ip = ip
										ip_empty       = self.static_ip.nil? || self.static_ip.empty?
										break unless ip_empty
								end
								puts "input static_ip #{ip} failed'" if ip_empty
						end
				end

