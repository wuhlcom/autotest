				#设置dhcp连接
				def set_dhcp(browserobj, url)
						#设置dhcp连接前先查询状态设置中的连接方式
						sys_page = SystatusPage.new(browserobj)
						sys_page.open_systatus_page(url)
						wan_type = sys_page.get_wan_type
						unless wan_type == @@ts_wan_mode_dhcp
								set_dhcp_mode(url)
						end
				end

